{
  "name": "ui-kit",
  "private": true,
  "scripts": {
    "setup": "npm i && lerna bootstrap",
    "start": "lerna run --parallel start",
    "build": "lerna run build",
    "test": "lerna run test",
    "test:watch": "lerna run --parallel test:watch --no-prefix",
    "check": "gts check",
    "fix": "gts fix",
    "report:bundle-size": "node ./benchmark/bundle-size/bundle-size.js",
    "report:bundle-size:time-series": "node ./benchmark/bundle-size/time-series.js",
    "cypress:test": "lerna run cypress:test",
    "commit": "git-cz",
    "release": "lerna version --conventional-commits",
    "release:pre": "lerna version --conventional-commits --conventional-prerelease",
    "release:graduate": "lerna version --conventional-commits --conventional-graduate"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^9.1.1",
    "@commitlint/config-lerna-scopes": "^9.1.1",
    "@commitlint/lint": "^9.1.1",
    "@types/node": "^10.0.3",
    "cross-fetch": "^3.0.4",
    "cz-conventional-changelog": "^3.2.0",
    "eslint-plugin-cypress": "^2.11.1",
    "gts": "^2.0.2",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./hooks/commit-msg.js",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": [
        "bueno",
        "headless",
        "atomic",
        "quantic"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "npm run fix",
      "git add"
    ],
    "**/*.html": [
      "prettier --print-width 120 --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {}
}
